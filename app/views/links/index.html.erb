<h1>Listing links</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Parent</th>
    <th>Child</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @links.each do |link| %>
  <tr>
    <td><%= link.id %></td>
    <td><%= link.parent_id %></td>
    <td><%= link.child_id %></td>
    <td><%= link.weight %></td>
    <td><%= link_to 'Show', link %></td>
    <td><%= link_to 'Edit', edit_link_path(link) %></td>
    <td><%= link_to 'Destroy', link, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

